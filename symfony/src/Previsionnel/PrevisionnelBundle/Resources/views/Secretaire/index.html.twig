<!DOCTYPE html>
<html>
    <head>
        <title>Module de secrétaire</title>
        {% block stylesheets %}
        <!-- Bootstrap core CSS -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- Bootstrap theme -->
        <!-- <link href="{{ asset('css/bootstrap-theme.min.css') }}" rel="stylesheet"> -->
        <!-- Custom style -->
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>

        <div class="container">

            <h1>Liste des professeurs</h1>
            
            <div class="row">
                <nav class="col-sm-2 col-sm-offset-10">
                    <ul class="nav nav-pills nav-stacked fixed">
                        <li><a href="accueil">Accueil</a></li>
                        {% if utilisateur.id is defined and annee is defined and "Résumé des cours" in roles %}
                        <li><a href="page-professeur/{{ annee }}/{{ utilisateur.id }}">Résumé</a></li>
                        {% endif %}
                        {% if "Secrétaire" in roles %}
                        <li class="active"><a href="secretaire">Secrétaire</a></li>
                        {% endif %}
                        {% if "Affectation d'heures de cours" in roles %}
                        <li><a href="prevision">Prévision</a></li>
                        {% endif %}
                        {% if "Affectation des départements" in roles %}
                        <li><a href="departement">Départements</a></li>
                        {% endif %}
                        {% if "Voir les tickets" in roles %}
                        <li><a href="tickets">Tickets</a></li>
                        {% endif %}
                        <li><a href="logout">Déconnexion</a></li>
                    </ul>
                </nav>
                
                <section class="col-sm-8 col-sm-offset-2">
                    <table class="table table-bordered table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>Prénom</th>
                                <th>Nom</th>
                                <th>Département</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in tableauUtilisateur %}
                            <tr>
                                <td><a href="page-professeur/{{annee}}/{{user.id}}">{{user.nom}}</a></td>
                                <td>{{user.prenom}}</td>
                                <td>{{user.nomDep}}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </section>
            </div>
            
            <div class="row">
                <section class="col-sm-8 col-sm-offset-2">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </section>
            </div>
        </div>

        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
        <script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-jqueryui.js') }}"></script>
        {% endblock %}
    </body>
</html>
